<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 设置了高度的 lly-->
    <style name="User_item_style">
        <item name="android:layout_height">@dimen/public_space_value_60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 背景白色-->
    <style name="Lly_top_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/public_space_value_8</item>
        <item name="android:paddingRight">@dimen/public_space_value_8</item>
        <item name="android:layout_marginTop">@dimen/public_space_value_8</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Lly_normal_style_vertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Lly_normal_style_horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/public_space_value_48</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Lly_style_horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/public_space_value_8</item>
        <item name="android:minHeight">@dimen/public_space_value_48</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="User_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/public_textsize_value_12</item>
        <item name="android:textColor">@color/T4</item>
    </style>
    <style name="Remind_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/public_space_value_8</item>
        <item name="android:textSize">@dimen/public_textsize_value_14</item>
        <item name="android:textColor">@color/T4</item>
    </style>
    <style name="Remind_text_normal_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/public_textsize_value_14</item>
        <item name="android:textColor">@color/T4</item>
    </style>
    <style name="Release_edit_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/public_textsize_value_14</item>
        <item name="android:padding">@dimen/public_space_value_8</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/S2</item>
        <item name="android:textColor">@color/T4</item>
    </style>
    <style name="Release_edit_normal_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/public_textsize_value_14</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/S2</item>
        <item name="android:textColor">@color/T4</item>
    </style>
    <style name="Line_horizontal">
        <item name="android:layout_height">@dimen/public_space_value_0.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_marginLeft">@dimen/public_space_value_8</item>
        <item name="android:layout_marginRight">@dimen/public_space_value_8</item>
    </style>
    <style name="Line_horizontal_normal">
        <item name="android:layout_height">@dimen/public_space_value_0.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="Line_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/public_space_value_0.5</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_marginTop">@dimen/public_space_value_8</item>
        <item name="android:layout_marginBottom">@dimen/public_space_value_8</item>
    </style>
    <style name="Line_vertical_normal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/public_space_value_0.5</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="tv_width_wrap_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/public_space_value_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tv_bar_click_background</item>
        <item name="android:textSize">@dimen/public_textsize_value_12</item>
    </style>
    <style name="tv_width_match_click">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/public_space_value_48</item>
        <item name="android:padding">@dimen/public_space_value_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tv_click_background</item>
        <item name="android:textSize">@dimen/public_textsize_value_16</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_weight_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/public_textsize_value_18</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Image_top_bar">
        <item name="android:layout_width">@dimen/public_space_value_32</item>
        <item name="android:layout_height">@dimen/public_space_value_32</item>
        <item name="android:padding">@dimen/public_space_value_4</item>
    </style>

    <style name="bar_style">
        <item name="android:layout_height">@dimen/public_space_value_48</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bar_color</item>
    </style>
</resources>
