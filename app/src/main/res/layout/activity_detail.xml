<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/Lly_normal_style_vertical">

            <include layout="@layout/base_bar" />

            <ScrollView
                android:id="@+id/sv_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout style="@style/Lly_normal_style_vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_top_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/lly_point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2000dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_change_bar"
            style="@style/Lly_normal_style_horizontal"
            android:alpha="0">

            <TextView
                android:id="@+id/tv_change_title"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/bar_color"
                android:gravity="center"
                android:text="123456"
                android:textSize="25sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
