<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_preview"
    android:orientation="horizontal">

    <android.support.v4.view.ViewPager
        android:id="@+id/pv_image_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/lyt_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_space_value_48"
        android:background="@color/background_tab_pressed"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:src="@drawable/pictures_no"/>
        <TextView
            android:id="@+id/tv_sel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/white"
            android:text="删除"
            android:visibility="gone"
            android:textSize="@dimen/public_space_value_12"/>
        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/white"
            android:text="完成"
            android:visibility="gone"
            android:textSize="@dimen/public_space_value_12"/>
    </LinearLayout>
</RelativeLayout>
